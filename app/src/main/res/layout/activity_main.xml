<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="605dp"
        android:id="@+id/fragment"
        android:background="@mipmap/welcome">
    </FrameLayout>
    <LinearLayout
    android:layout_height="55dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:layout_gravity="bottom"
    android:id="@+id/home">
    <ImageView
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:id="@+id/main_food"
        android:src="@drawable/home_food"
        android:layout_weight="1"/>

    <ImageView
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:id="@+id/main_recommend"
        android:src="@drawable/home_recommend"
        android:layout_weight="1"/>

    <ImageView
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:id="@+id/main_list"
        android:src="@drawable/home_list"
        android:layout_weight="1"/>

    <ImageView
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:id="@+id/main_user"
        android:src="@drawable/home_user"
        android:layout_weight="1"/>

</LinearLayout>
</FrameLayout>